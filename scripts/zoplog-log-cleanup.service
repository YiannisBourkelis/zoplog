[Unit]
Description=ZopLog Database Disk Space Cleanup
After=mariadb.service
Requires=mariadb.service

[Service]
Type=oneshot
User=zoplog
Group=zoplog
WorkingDirectory=/opt/zoplog/zoplog/python-logger
ExecStart=/opt/zoplog/zoplog/python-logger/venv/bin/python log_cleanup.py --cleanup-orphaned --optimize
TimeoutStartSec=3600

[Install]
WantedBy=multi-user.target
