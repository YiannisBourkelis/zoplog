{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File (with sudo)",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [],
            "python": "/usr/bin/python3",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "ZopLog Logger (with sudo) - Use Terminal",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/python-logger/logger.py",
            "console": "integratedTerminal",
            "python": "sudo /usr/bin/python3",
            "presentation": {
                "hidden": false,
                "focus": true
            }
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "pathMappings": {
                "/var/www/zoplog": "${workspaceFolder}/web-interface"
            },
            "xdebugSettings": {
                "max_data": 500024,
                "max_children": 1000,
                "max_depth": 10
            }
        },
        {
            "name": "Launch PHP Script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9003
        }
    ]
}